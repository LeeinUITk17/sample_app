<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= link_to "New User", new_user_path, class: "btn btn-primary" %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %> |
      <%= link_to "edit", edit_user_path(user) %> |
      <%= link_to "delete", user, data: { turbo_method: :delete, turbo_confirm: "You sure?" } %>
    </li>
  <% end %>
</ul>