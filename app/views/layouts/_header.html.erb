<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <nav>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <%= link_to t("layouts.header.home"), root_path %>
                </li>
                <li>
                    <%= link_to t("layouts.header.contact"), contact_path %>
                </li>

                <% if logged_in? %>
                    <li>
                        <%= link_to t("layouts.header.users"), users_path %>
                    </li>
                    <li>
                        <%= link_to t("layouts.header.profile"), current_user %>
                    </li>
                    <li>
                        <%= link_to t("layouts.header.settings"), edit_user_path(current_user) %>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <%= button_to t("layouts.header.log_out"), logout_path, method: :delete %>
                    </li>
                <% else %>
                    <li>
                        <%= link_to t("layouts.header.log_in"), login_path %>
                    </li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>
